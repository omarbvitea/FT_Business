{
    "name": "family-tree-backend",
    "version": "1.0.0",
    "description": "Backend API for family tree application",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "npm run lint:fix && tsc",
        "start": "node dist/server.js",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:migrate:prod": "prisma migrate deploy",
        "db:seed": "tsx prisma/seed.ts",
        "format": "prettier --write \"src/**/*.ts\" \"prisma/**/*.ts\"",
        "lint:fix": "eslint src --fix"
    },
    "keywords": [
        "family-tree",
        "genealogy",
        "api",
        "hono",
        "prisma"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@hono/node-server": "1.13.7",
        "@prisma/client": "6.2.0",
        "bcrypt": "5.1.1",
        "dotenv": "^17.2.3",
        "hono": "^4.11.3",
        "zod": "3.24.1"
    },
    "devDependencies": {
        "@types/bcrypt": "5.0.2",
        "@types/node": "22.10.5",
        "eslint": "^9.39.2",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "prettier": "3.4.2",
        "prisma": "6.2.0",
        "tsx": "^4.21.0",
        "typescript": "5.7.2",
        "typescript-eslint": "^8.53.0"
    }
}
